{
  "name": "tool use with anthropic claude-sonnet-4-5 returns current working directory",
  "steps": [
    {"send_keys": "/clear\\r"},
    {"wait": 0.5},
    {"send_keys": "/model claude-sonnet-4-5/low\\r"},
    {"wait": 0.5},
    {"mock_expect": {"responses": [{"tool_calls": [{"name": "bash", "arguments": {"command": "pwd"}}]}, {"content": "The current working directory is /home/user/projects/ikigai."}]}},
    {"send_keys": "use your bash tool to return the current working directory\\r"},
    {"wait_idle": 15000},
    {"read_framebuffer": true}
  ],
  "assert": [
    {"contains": "claude-sonnet-4-5/low"},
    {"line_prefix": "→ bash:"},
    {"line_prefix": "← bash:"},
    {"line_prefix": "●"}
  ],
  "assert_mock": []
}
