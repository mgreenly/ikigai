{
  "name": "tool use with openai gpt-5-mini returns current working directory",
  "steps": [
    {"send_keys": "/clear\\r"},
    {"wait": 1},
    {"send_keys": "/model gpt-5-mini/low\\r"},
    {"wait": 1},
    {"send_keys": "use your bash tool to return the current working directory\\r"},
    {"wait": 10},
    {"read_framebuffer": true}
  ],
  "assert": [
    {"contains": "gpt-5-mini/low"},
    {"line_prefix": "→ bash:"},
    {"line_prefix": "← bash:"},
    {"line_prefix": "●"}
  ],
  "assert_mock": []
}
