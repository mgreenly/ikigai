#!/bin/bash
# fix-unit - Fix unit test failures using ralph
#
# Thin wrapper that invokes ralph with the fix-unit goal.
# All arguments are passed through to ralph.
#
# Usage:
#   .claude/harness/fix-unit/run [--duration=4h] [--model=sonnet] [--reasoning=low]

SCRIPT_DIR="$(cd "$(dirname "$(realpath "${BASH_SOURCE[0]}")")" && pwd)"
GOAL_FILE="$SCRIPT_DIR/fix-unit-ralph-goal.md"

exec "$SCRIPT_DIR/../ralph/run" --goal="$GOAL_FILE" "$@"
