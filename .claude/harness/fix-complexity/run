#!/bin/bash
# fix-complexity - Fix complexity violations using ralph
#
# Thin wrapper that invokes ralph with the fix-complexity goal.
# All arguments are passed through to ralph.
#
# Usage:
#   .claude/harness/fix-complexity/run [--duration=4h] [--model=sonnet] [--reasoning=low]

SCRIPT_DIR="$(cd "$(dirname "$(realpath "${BASH_SOURCE[0]}")")" && pwd)"
GOAL_FILE="$SCRIPT_DIR/fix-complexity-ralph-goal.md"

exec "$SCRIPT_DIR/../ralph/run" --goal="$GOAL_FILE" "$@"
